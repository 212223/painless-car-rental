<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="images/cars/{{ car.picture }}" class="img-fluid rounded-start" alt="{{ car.fullName }}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{ car.fullName }}</h5>
                <p class="card-text">{{ car.productionYear }}</p>
                <p class="card-text"><small class="text-muted">{{ car.colors }}</small></p>
            </div>
        </div>
    </div>
</div>
